<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
		   	 <corners  android:radius="4dp" /> 
			 <solid android:color="#50dbe6e8" />
			 <stroke  android:width="1dp" android:color="#50dbe6e8"/>
			 <padding android:left="13dp" android:top="4dp" android:right="13dp" android:bottom="4dp"/>
		</shape>
    </item>
    <item >
        <shape>
		   	 <corners  android:radius="4dp" /> 
			 <solid android:color="@color/white" />
			 <stroke  android:width="1dp" android:color="#fa7257"/>
			 <padding android:left="13dp" android:top="4dp" android:right="13dp" android:bottom="4dp"/>
		</shape>
    </item>
</selector>