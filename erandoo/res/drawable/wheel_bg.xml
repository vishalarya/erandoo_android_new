<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:centerColor="@color/trans_color"
                android:endColor="@color/trans_color"
                android:startColor="@color/trans_color" />

            <stroke
                android:width="0.5dp"
                android:color="#f2f3f3" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:centerColor="@color/trans_color"
                android:endColor="@color/trans_color"
                android:startColor="@color/trans_color" />
        </shape>
    </item>

</layer-list>