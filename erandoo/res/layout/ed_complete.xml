<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical" >

        <include
            android:id="@+id/rlMPPHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/app_header_view_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e2e2e2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eff3f4"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtPCtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="#5b5a5a"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp" >

                    <TextView
                        style="@style/font_field_title_project_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/BudgetwColon" />

                    <TextView
                        android:id="@+id/txtPCBudget"
                        style="@style/font_blue_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp" >

                    <TextView
                        style="@style/font_field_title_project_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/posted" />

                    <TextView
                        android:id="@+id/txtPCPostedDate"
                        style="@style/font_field_text_project_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp" >

                    <TextView
                        style="@style/font_field_title_project_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/StartWColon" />

                    <TextView
                        android:id="@+id/txtPCStartDate"
                        style="@style/font_field_text_project_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true" />

                    <!-- <TextView -->
                    <!-- style="@style/font_field_title_project_list" -->
                    <!-- android:layout_width="wrap_content" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:layout_marginLeft="10dp" -->
                    <!-- android:singleLine="true" -->
                    <!-- android:text="@string/FinishWColon" /> -->


                    <!-- <TextView -->
                    <!-- android:id="@+id/txtPCFinishDate" -->
                    <!-- style="@style/font_field_text_project_list" -->
                    <!-- android:layout_width="wrap_content" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:layout_marginLeft="5dp" -->
                    <!-- android:singleLine="true" /> -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e2e2e2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/ed_color_orange_light"
                android:gravity="center"
                android:orientation="vertical" >

                <erandoo.app.custom.CircularImageView
                    android:id="@+id/imvUserImage"
                    style="@style/font_green_text_project_list"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/txtUsername"
                    style="@style/font_field_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/font_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/End_Project"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtCompleteInitial"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_icon_btn_selector"
                android:drawableTop="@drawable/ic_complete_project"
                android:gravity="center"
                android:text="@string/complete"
                android:textColor="@color/ed_color_orange_light"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>