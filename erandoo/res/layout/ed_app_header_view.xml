<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/ed_color_orange_light"
    android:clickable="false" >

    <TextView
        android:id="@+id/txtHLeft"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ed_btn_focus_selector"
        android:clickable="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtHTitle"
        style="@style/font_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtHLeft"
        android:text="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txtHRight1"
            style="@style/font_white_border_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_btn_focus_selector"
            android:clickable="true"
            android:gravity="center" />

        <View
            android:id="@+id/vRightLine"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#ffffff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtHRight2"
            style="@style/font_white_border_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_btn_focus_selector"
            android:clickable="true"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>