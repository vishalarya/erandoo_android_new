<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_header_h"
            android:background="@color/ed_color_orange_light" >

            <ImageView
                android:id="@+id/imgMBackMessageF"
                android:layout_width="@dimen/app_header_h"
                android:layout_height="match_parent"
                android:background="@drawable/ed_btn_focus_selector"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/ic_close_w" />

            <TextView
                android:id="@+id/txtTitleMessageF"
                style="@style/font_header_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/filter_by" />
        </LinearLayout>

        <ListView
            android:id="@+id/LVMessageF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

</LinearLayout>