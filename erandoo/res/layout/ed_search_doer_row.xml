<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ed_bg_card_view"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llSDMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <erandoo.app.custom.CircularImageView
                android:id="@+id/imvSDImage"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/doer" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtSDName"
                    style="@style/font_text_color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RatingBar
                        android:id="@+id/rBarSDRating"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.01" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSDLocation"
                    style="@style/font_text_color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|right"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imvSDOnlineStatus"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:id="@+id/imvSDPremium"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_premium" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/chkSDCheck"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/ed_chk_selector"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/SDview1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/field_title_bg" />

        <LinearLayout
            android:id="@+id/llSDInfo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtSDHired"
                    style="@style/font_green_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Hired" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtSDNetwork"
                    style="@style/font_blue_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Network" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtSDJobs"
                    style="@style/font_orange_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/projects" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/SDview2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/field_title_bg" />

        <LinearLayout
            android:id="@+id/llSDOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/txtSDInvite"
                style="@style/font_blue_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/invite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSDMessage"
                style="@style/font_blue_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Messages"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSDPotential"
                style="@style/font_blue_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/Potential"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>