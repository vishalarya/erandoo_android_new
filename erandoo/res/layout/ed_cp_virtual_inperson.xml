<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />

    <LinearLayout
        android:id="@+id/llCPChooseTemplate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="center_vertical|right"
            android:padding="8dp"
            android:text="@string/Project_Template" />

        <TextView
            android:id="@+id/txtCPChooseTemplate"
            style="@style/font_field_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ed_btn_focus_selector"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center_vertical"
            android:hint="@string/Hint_Choose_Template"
            android:paddingLeft="8dp"
            android:singleLine="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Project Title -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="center_vertical|right"
            android:padding="8dp"
            android:text="@string/Project_Title" />

        <EditText
            android:id="@+id/eTextCPTitle"
            style="@style/font_field_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ed_edit_text_normal"
            android:gravity="center_vertical"
            android:hint="@string/Hint_Enter_Title"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="60"
            android:padding="8dp"
            android:singleLine="true"
            android:textCursorDrawable="@color/ed_color_orange_light" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Project Description -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="top|right"
            android:padding="8dp"
            android:text="@string/Project_Description" />

        <EditText
            android:id="@+id/eTextCPDescription"
            style="@style/font_field_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ed_edit_text_normal"
            android:hint="@string/Hint_Write_Description"
            android:imeOptions="actionNext"
            android:maxLength="3000"
            android:maxLines="5"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textCursorDrawable="@color/ed_color_orange_light" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />

    <!-- Project Completion Date Time Selection -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:minHeight="35dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="top|right"
            android:padding="8dp"
            android:text="@string/Completion_Date" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtCPSelectCompletionDate"
                style="@style/font_field_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ed_btn_focus_selector"
                android:drawableRight="@drawable/ic_calender"
                android:gravity="center_vertical"
                android:hint="@string/Hint_Select_Date"
                android:paddingLeft="8dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/txtCPSelectCompletionTime"
                style="@style/font_field_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ed_btn_focus_selector"
                android:drawableRight="@drawable/ic_time"
                android:gravity="center_vertical"
                android:hint="@string/Hint_Select_Time"
                android:paddingLeft="8dp"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Bid Duration -->

    <LinearLayout
        android:id="@+id/llCPBidDuration"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="center_vertical|right"
            android:padding="8dp"
            android:text="@string/Bid_Duration" />

        <TextView
            android:id="@+id/txtCPSelectBidDuation"
            style="@style/font_field_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ed_btn_focus_selector"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center_vertical"
            android:hint="@string/Hint_Select_Bid_Duration"
            android:paddingLeft="8dp"
            android:singleLine="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Budget Section -->

    <LinearLayout
        android:id="@+id/lLPBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="50dp"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="top|right"
            android:orientation="vertical" >

            <TextView
                style="@style/font_field_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="@string/Budget" />

            <TextView
                android:id="@+id/txtCPSwitchBudget"
                style="@style/font_field_title_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_btn_focus_selector"
                android:gravity="center_vertical|right"
                android:padding="8dp"
                android:text="@string/Switch_to_Hourly" />
        </LinearLayout>
        <!-- Edit text section for Budget -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
           <!-- CODE FOR MAX MIN PRICE -->
           <!--  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
