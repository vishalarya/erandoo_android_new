            <EditText
                android:id="@+id/eTextCPPrice"
                style="@style/font_text_field_normal_14sp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ed_edit_text_normal"
                android:drawableLeft="@drawable/ic_doller"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:singleLine="true"
                android:textCursorDrawable="@color/ed_color_orange_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/Expenses" />

                <EditText
                    android:id="@+id/eTextCPExpenses"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ed_edit_text_normal"
                    android:drawableLeft="@drawable/ic_doller"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textCursorDrawable="@color/ed_color_orange_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCPHourPerWeek"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="visible"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/Hours_per_week" />

                <EditText
                    android:id="@+id/eTextCPWorkHours"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ed_edit_text_normal"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:textCursorDrawable="@color/ed_color_orange_light" />
            </LinearLayout>
            <!-- Total Estimated Cost -->

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="visible"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_text"
                    android:layout_width="wrap_content"
