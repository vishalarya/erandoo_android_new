        </LinearLayout>
    </LinearLayout>
    <!-- Budget Section End -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Visibility Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="center_vertical|right"
            android:padding="8dp"
            android:text="@string/Visibility" />

        <RadioGroup
            android:id="@+id/rdCPGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rdCPPublic"
                style="@style/CustomRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableLeft="@drawable/ed_rd_selector"
                android:drawablePadding="5dp"
                android:text="@string/Public" />

            <RadioButton
                android:id="@+id/rdCPPrivate"
                style="@style/CustomRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ed_rd_selector"
                android:drawablePadding="5dp"
                android:text="@string/Private" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/field_title_bg" />
    <!-- Check Box Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="35dp"
        android:weightSum="1" >

        <TextView
            style="@style/font_field_title"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/field_title_bg"
            android:gravity="top|right"
            android:padding="8dp"
            android:text="@string/Posting_Type" />
        <!-- Edit text section for buget -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="8dp" >

            <CheckBox
                android:id="@+id/chkCPIsPremium"
                style="@style/CustomCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:checked="true"
                android:drawableLeft="@drawable/ed_chk_selector"
                android:drawablePadding="5dp"
                android:text="@string/Premium" />

            <CheckBox
                android:id="@+id/chkCPIsHighlighted"
                style="@style/CustomCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ed_chk_selector"
                android:drawablePadding="5dp"
                android:text="@string/Highlighted" />
            <CheckBox
                android:id="@+id/chkCPIsSealProposal"
                style="@style/CustomCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ed_chk_selector"
                android:drawablePadding="5dp"
                android:text="@string/Seal_all_proposal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>