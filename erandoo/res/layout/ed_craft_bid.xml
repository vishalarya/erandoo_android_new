<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="1" >

    <include
        android:id="@+id/rlCBPHeader"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/app_header_view_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:minHeight="35dp"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/field_title_bg"
                    android:gravity="center_vertical|right"
                    android:padding="8dp"
                    android:text="@string/project" />

                <TextView
                    android:id="@+id/txtCBProjectName"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ed_edit_text_normal"
                    android:gravity="center_vertical"
                    android:maxLength="60"
                    android:maxLines="2"
                    android:padding="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/field_title_bg"
                    android:gravity="top|right"
                    android:padding="8dp"
                    android:text="@string/proposals" />

                <EditText
                    android:id="@+id/eTextCBDescription"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ed_edit_text_normal"
                    android:hint="@string/enter_Your_Proposal"
                    android:imeOptions="actionNext"
                    android:maxLength="3000"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:textCursorDrawable="@color/ed_color_orange_light" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:id="@+id/lLCBBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:minHeight="50dp"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/field_title_bg"
                    android:gravity="top|right"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/font_field_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/Budget" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:weightSum="1" >

                        <TextView
                            style="@style/font_field_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="@string/my_Pay" />

                        <EditText
                            android:id="@+id/eTextCBMyPay"
                            style="@style/font_field_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ed_edit_text_normal"
                            android:drawableLeft="@drawable/ic_doller"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textCursorDrawable="@color/ed_color_orange_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:weightSum="1" >

                        <TextView
                            style="@style/font_field_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="@string/poster_Pay" />

                        <EditText
                            android:id="@+id/eTextCBPosterPay"
                            style="@style/font_field_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ed_edit_text_normal"
                            android:drawableLeft="@drawable/ic_doller"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textCursorDrawable="@color/ed_color_orange_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:weightSum="1" >

                        <TextView
                            style="@style/font_field_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="@string/Expenses" />

                        <TextView
                            android:id="@+id/eTextCBExpenses"
                            style="@style/font_field_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ed_edit_text_normal"
                            android:drawableLeft="@drawable/ic_doller"
                            android:gravity="center_vertical"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:minHeight="35dp"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/field_title_bg"
                    android:gravity="top|right"
                    android:padding="8dp"
                    android:text="@string/time_to_Complete" />

                <TextView
                    android:id="@+id/txtCBSelectCompletionTime"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/ed_btn_focus_selector"
                    android:drawableRight="@drawable/ic_time"
                    android:gravity="center_vertical"
                    android:hint="@string/Hint_Select_Time"
                    android:paddingLeft="8dp"
                    android:singleLine="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/field_title_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:minHeight="35dp"
                android:weightSum="1" >

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/field_title_bg"
                    android:gravity="top|right"
                    android:padding="8dp"
                    android:text="@string/Questions" />

                <TextView
                    android:id="@+id/txtCBAnswer"
                    style="@style/font_field_text"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/ed_btn_focus_selector"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center_vertical"
                    android:hint="@string/answer"
                    android:paddingLeft="8dp"
                    android:singleLine="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/field_title_bg" />

            <CheckBox
                android:id="@+id/chkCBSealProposal"
                style="@style/CustomCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ed_chk_selector"
                android:drawablePadding="5dp"
                android:text="@string/Seal_my_proposal"
                android:textStyle="bold"
                android:textColor="#888888"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llChkCBIsComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1" >

                <CheckBox
                    android:id="@+id/chkCBIsComplete"
                    style="@style/CustomCheckButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_chk_selector" />

                <TextView 
                    android:id="@+id/txtCBIsComplete"
                    style="@style/font_field_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Project_by_the_desired_date"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChkCBSatisfaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1" >

                <CheckBox
                    android:id="@+id/chkCBSatisfaction"
                    style="@style/CustomCheckButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_chk_selector" />

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/satisfaction" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChkCBExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1" >

                <CheckBox
                    android:id="@+id/chkCBExpenses"
                    style="@style/CustomCheckButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_chk_selector" />

                <TextView
                    style="@style/font_field_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Authentication" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e7e7" />

    <RelativeLayout
        android:id="@+id/rlbottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/txtAttach"
            style="@style/font_footer_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ed_btn_focus_selector"
            android:drawableTop="@drawable/ic_attach"
            android:gravity="center"
            android:text="@string/Attachment"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnCBSubmit"
            style="@style/font_gray_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ed_btn_gray_border_selector"
            android:text="@string/submit"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>