<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@android:color/transparent"
    android:clickable="false" >

    <ImageView
        android:id="@+id/imgDBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ed_btn_focus_selector"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/txtDHTitle"
        style="@style/font_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/llRight"
        android:layout_toRightOf="@+id/imgDBack"
        android:singleLine="true"
        android:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/txtDHRight"
            style="@style/font_white_border_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_btn_white_border_selector"
            android:clickable="true"
            android:visibility="gone"
            android:text="@string/Done" />
    </LinearLayout>

</RelativeLayout>