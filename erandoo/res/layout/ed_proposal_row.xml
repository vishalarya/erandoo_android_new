<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ed_bg_card_view"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llSDMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp" >

            <erandoo.app.custom.CircularImageView
                android:id="@+id/imvPRRImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/doer" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/txtPRRName"
                        style="@style/font_text_color_blue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imvPLPremium"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_premium"
                        android:visibility="gone" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/rBarPRRRating"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="7dp"
                    android:stepSize="0.01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtPRRLocation"
                        style="@style/font_text_color_red"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtPRRPrice"
                        style="@style/font_text_color_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ed_btn_green_border_selector"
                        android:drawableRight="@drawable/ic_arrow"
                        android:gravity="right"
                        android:text="@string/app_name" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/field_title_bg" />

        <LinearLayout
            android:id="@+id/rlProjectFilter"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtPRRHired"
                    style="@style/font_green_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Hired" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e7e7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtPRRNetwork"
                    style="@style/font_blue_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Network" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e7e7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtPRRJobs"
                    style="@style/font_orange_text_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/font_field_title_project_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/project" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/field_title_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/txtPRRHire"
                style="@style/font_blue_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/Hire"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPRRMessage"
                style="@style/font_blue_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Messages"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPRRPotential"
                style="@style/font_blue_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/ed_btn_green_border_selector"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/Potential"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>